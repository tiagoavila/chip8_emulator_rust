    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chip8_emulator_rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=chip8_emulator_rust",
                    "--package=chip8_emulator_rust"
                ],
                "filter": {
                    "name": "chip8_emulator_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'chip8_emulator_rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=chip8_emulator_rust",
                    "--package=chip8_emulator_rust"
                ],
                "filter": {
                    "name": "chip8_emulator_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'chip8_emulator_rust' with instruction_count 40",
            "cargo": {
                "args": [
                    "run",
                    "--",
                    "--debug",
                    "--instruction_count",
                    "40"
                ],
                "filter": {
                    "name": "chip8_emulator_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "stdio": null
        }
    ]
}